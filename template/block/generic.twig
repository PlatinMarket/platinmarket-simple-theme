{# PlatinMarket default theme blocks #}

{# Title block #}
{% block title %}
  {{ page_title }} PlatinMarket@next
{% endblock %}

{# Meta block #}
{% block meta %}
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
{% endblock %}

{# Style block #}
{% block style %}
  <link rel="stylesheet" href="{{ asset.resolve('default/app.css') }}" />
{% endblock %}

{# Script block #}
{% block script %}
  <script type="application/javascript" src="{{ asset.resolve('default/polyfills.js') }}"></script>
  <script type="application/javascript" src="{{ asset.resolve('default/vendor.js') }}"></script>
  <script type="application/javascript" src="{{ asset.resolve('default/app.js') }}"></script>
{% endblock %}