        <div class="part ml-auto">
          <a href class="ml-2">Menü 1</a>
          <a href class="ml-2">Menü 2</a>
          <a href class="ml-2">Menü 3</a>
          <a href class="ml-2">Menü 4</a>
          <a href class="ml-2">Menü 5</a>
        </div>
      </div>
