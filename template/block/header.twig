{% block header %}
  <header class="header mb-3">
    <div class="container">
      <div class="top-menu mb-4 pt-2 d-flex justify-content-start">
        <div class="part">
          <a href class="mr-2">Menü 1</a>
          <a href class="mr-2">Menü 2</a>
          <a href class="mr-2">Menü 3</a>
          <a href class="mr-2">Menü 4</a>
