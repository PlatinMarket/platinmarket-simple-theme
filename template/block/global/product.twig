{% block product %}
<div class="product mt-2 mb-2">
  <a href="/products/test" title="Apple iPhone 7 32 GB (Apple Türkiye Garantili)">
    <div class="image text-center mb-2">
      <div class="owl-carousel owl-theme">
        <div><img class="img-fluid owl-lazy" data-src="{{ asset.resolve('default/product/sample_product_1.jpg') }}" /></div>
        <div><img class="img-fluid owl-lazy" data-src="{{ asset.resolve('default/product/sample_product_2.jpg') }}" /></div>
        <div><img class="img-fluid owl-lazy" data-src="{{ asset.resolve('default/product/sample_product_3.jpg') }}" /></div>
        <div><img class="img-fluid owl-lazy" data-src="{{ asset.resolve('default/product/sample_product_4.jpg') }}" /></div>
      </div>
    </div>
